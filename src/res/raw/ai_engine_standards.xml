        <root>
            <!-- 5 < distanceFromFire < 12.5 -->
            <IntervalNode>
                <min>5</min>
                <max>12.5</max>
                <field>
                    <DistanceFromElement>
                        <element>Fire</element>
                        <saveAs>distanceFromFire</saveAs>
                        <saveArgmin>nearestFire</saveArgmin>
                    </DistanceFromElement>
                </field>

                <onTrue>
                    <!-- hasWater? -->
                    <BoolFieldNode>
                        <field>
                            <Flag type="boolean">
                                <flagName>hasWater</flagName>
                            </Flag>
                        </field>

                        <onTrue>
                            <!-- Health < 150 -->
                            <IntervalNode>
                                <max>150</max>
                                <field>
                                    <Health></Health>
                                </field>

                                <onTrue>
                                    <!-- Flee -->
                                    <FirstCallLeaf>
                                        <Log>Warn</Log>
                                        <Standard>
                                            <Flee></Flee>
                                        </Standard>
                                        <FirstTime>
                                            <FirstFlee></FirstFlee>
                                        </FirstTime>
                                    </FirstCallLeaf>
                                </onTrue>
                                <onFalse>
                                    <!-- 5 < distanceFromFire < 7.5 -->
                                    <IntervalNode>
                                        <min>5</min>
                                        <max>7.5</max>
                                        <field>
                                            <Flag type="Float">
                                                <flagName>distanceFromFire</flagName>
                                            </Flag>
                                        </field>

                                        <onTrue>
                                            <!-- Attack -->
                                            <Leaf>
                                                <Log>Error</Log>
                                                <action>
                                                    <Attack></Attack>
                                                </action>
                                            </Leaf>
                                        </onTrue>
                                        <onFalse>
                                            <!-- Chase -->
                                            <FirstCallLeaf>
                                                <Log>Warn</Log>
                                                <Standard>
                                                    <Chase></Chase>
                                                </Standard>
                                                <FirstTime>
                                                    <FirstChase></FirstChase>
                                                </FirstTime>
                                            </FirstCallLeaf>
                                        </onFalse>
                                    </IntervalNode>
                                </onFalse>
                            </IntervalNode>
                        </onTrue>
                        <onFalse>
                            <!-- Water > 0 (there is water?)-->
                            <IntervalNode>
                                <min>0</min>
                                <field>
                                    <DistanceFromElement>
                                        <element>Water</element>
                                        <saveAs>distanceFromWater</saveAs>
                                        <saveArgmin>nearestWater</saveArgmin>
                                    </DistanceFromElement>
                                </field>

                                <onTrue>
                                    <Leaf>
                                        <action>
                                            <Fetch></Fetch>
                                        </action>
                                    </Leaf>
                                </onTrue>
                                <onFalse>
                                    <!-- Flee -->
                                    <FirstCallLeaf>
                                        <Log>Warn</Log>
                                        <Standard>
                                            <Flee></Flee>
                                        </Standard>
                                        <FirstTime>
                                            <FirstFlee></FirstFlee>
                                        </FirstTime>
                                    </FirstCallLeaf>
                                </onFalse>
                            </IntervalNode>
                        </onFalse>
                    </BoolFieldNode>
                </onTrue>
                <onFalse>
                    <!-- Fire >12.5 -->
                    <IntervalNode>
                        <min>12.5</min>
                        max is null
                        <field>
                            <Flag type="Float">
                                <flagName>distanceFromFire</flagName>
                            </Flag>
                        </field>

                        <onTrue>
                            <!-- Wander -->
                            <Leaf>
                                <action>
                                    <Wander></Wander>
                                </action>
                            </Leaf>
                        </onTrue>
                        <onFalse>
                            <!-- Fire > 0 (Is fire in the game?) -->
                            <IntervalNode>
                                <min>0</min>
                                <field>
                                    <Flag type="Float">
                                        <flagName>distanceFromFire</flagName>
