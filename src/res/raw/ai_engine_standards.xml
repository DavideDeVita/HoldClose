                                <onTrue>
                                    <!-- Flee -->
                                    <FirstCallLeaf>
                                        <Log>Warn</Log>
                                        <Standard>
                                            <Flee></Flee>
                                        </Standard>
                                        <FirstTime>
                                            <FirstFlee></FirstFlee>
                                        </FirstTime>
                                    </FirstCallLeaf>
                                </onTrue>
                                <onFalse>
                                    <!-- Wander -->
                                    <Leaf>
                                        <action>
                                            <Wander></Wander>
                                        </action>
                                    </Leaf>
                                </onFalse>
                            </IntervalNode>
                        </onFalse>
                    </IntervalNode>
                </onFalse>
            </IntervalNode>
        </root>
